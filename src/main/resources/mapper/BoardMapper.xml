<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.boardproject.mapper.BoardMapper">
<!--select-->
    <select id="selectBoardDetail" parameterType="Long"
            resultType="com.example.boardproject.dto.BoardDTO">
        SELECT * FROM board WHERE id = #{id}
    </select>


    <select id="getBoardList" parameterType="com.example.boardproject.dto.BoardDTO"
            resultType="com.example.boardproject.dto.BoardDTO">
        SELECT * FROM board ORDER BY id

    </select>

    <!--insert-->
    <insert id="insertBoard" parameterType="com.example.boardproject.dto.BoardDTO">
        INSERT INTO board(title,content) VALUES(#{title},#{content})
    </insert>
<!--update-->
    <update id="updateBoard" parameterType="com.example.boardproject.dto.BoardDTO">
        UPDATE board SET title = #{title}, content = #{content}
        WHERE id = #{id}
    </update>
<!--delete-->
    <delete id="deleteBoard" parameterType="Long">
        DELETE FROM board WHERE id = #{id}
    </delete>

</mapper>

